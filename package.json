{
  "name": "wonderbook",
  "version": "1.0.0",
  "type": "module",
  "main": "index.jsx",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist/",
    "build:prod": "NODE_ENV=production vite build",
    "build:stats": "vite build --mode production --outDir dist-stats && npx webpack-bundle-analyzer dist-stats/stats.json",
    "preview": "vite preview",
    "preview:network": "vite preview --host 0.0.0.0",
    "preview:prod": "npm run build && vite preview --host 0.0.0.0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:ci": "eslint src --ext .js,.jsx,.ts,.tsx --format @eslint/eslint-plugin-stylistic",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:staged": "prettier --write",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist/ node_modules/.vite/ node_modules/.cache/",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "ci": "npm run lint && npm run type-check && npm run test:run && npm run build",
    "ci:full": "npm run clean && npm ci && npm run ci",
    "deploy:preview": "npm run build && npm run preview:network",
    "size-check": "npm run build && du -sh dist/ && find dist/ -name '*.js' -exec du -h {} \\; | sort -hr"
  },
  "dependencies": {
    "@fontsource/itim": "^5.2.6",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "axios": "^1.7.9",
    "connect-history-api-fallback": "^2.0.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.6.0",
    "react-reader": "^2.0.13",
    "react-router-dom": "^7.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bundlesize": "^0.18.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^16.3.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^6.2.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "axios": "^1.7.9"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500 KB"
    }
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000/"
}
